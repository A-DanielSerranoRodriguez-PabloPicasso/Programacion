package libro.Tema8;

import java.util.Scanner;

public class A_Comprobaciones {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int contador = 0, cont1 = 0, cont2 = 0;
//		int[][] m = { { 2, 2, 3, 2 }, { 4, 5, 6, 2 }, { 7, 8, 2, 2 }, { 2, 2, 2, 2 } };
		int[][] m = { { 2, 0, 0, 0 }, { 4, 5, 0, 0 }, { 7, 8, 2, 0 }, { 2, 2, 2, 2 } };
		int[] n = new int[(m.length * 2) - 2];
		int[] a = new int[(m.length * 2) - 2];
		boolean triangular1 = true, triangular2 = true;

//		int[][] m = { { 1, 2 }, { 3, 4 } };
//		System.out.println(utils.Comprobar.entero(sc.next()));
//		Matrices.imprimeMatriz(m);
//		System.out.println("\n");
//		Matrices.imprimeMatriz(Matrices.inversaMatriz(m));
//		Matrices.imprimeMatriz(Matrices.determinante(m));

//		System.out.println(Matrices.determinanteMatriz(m));

//		int[] array = E1_14_numeros.voltea(1293230) ;
//		for (int i = 0; i < array.length; i++) {
//			System.out.print(array[i]);
//		}
//		System.out.println(E1_14_numeros.posicionDigito(213,2));

//		System.out.println(E1_14_numeros.voltea(12));

//		System.out.println(E1_14_numeros.quitaPorDetras(213,1));

//		System.out.println(E1_14_numeros.quitaPorDelante(213,1));

//		System.out.println(E1_14_numeros.digitoN(213,0));

//		System.out.println(E1_14_numeros.pegaPorDetras(213,1));
//		
//		System.out.println(E1_14_numeros.pegaPorDelante(213,1));

		for (int i = 0; i < m.length; i++) {
			for (int j = cont1; j < m[i].length; j++) {

				if (i != j) {
					n[contador] = m[i][j];
					contador++;
				}

			}
			cont1++;
		}
		contador=0;
		for (int i = 0; i < m.length; i++) {
			for (int j = cont2; j < m[i].length; j++) {

				if (j != i) {
					a[contador] = m[j][i];
					contador++;
				}

			}
			cont2++;
		}
		for (int i = 0; i < n.length; i++) {
			if (n[i]!=0) {
				triangular1=false;
			}
		}
		for (int i = 0; i < a.length; i++) {
			if (a[i]!=0) {
				triangular2=false;
			}
		}
		for (int i = 0; i < n.length; i++) {
			System.out.print(a[i]);
		}
		for (int i = 0; i < n.length; i++) {
			System.out.print(n[i]);
		}
		System.out.println();
		for (int i = 0; i < a.length; i++) {
			System.out.print(a[i]);
		}
		System.out.println();
		
		if (triangular1==false && triangular2==false)
			System.out.println("No hay matriz triangular");
		else if(triangular1 && triangular2)
			System.out.println("La matriz es triangular. Zona superior izquierda e inferior derecha.");
		else if(triangular1)
			System.out.println("La matriz es triangular. Zona superior izquierda.");
		else if(triangular2)
			System.out.println("La matriz es triangular. Zona superior derecha.");

	}

}
