			System.out.println("6. Ver km coche");
			System.out.println("7. Ver km total");
			System.out.println("8. Salir");
			System.out.print("Elegir (1-8): ");
			n = Integer.parseInt(sc.next());

			switch (n) {
			case 1:
				System.out.println("Mioto arranquiada");
				miMoto.arrancar();
				break;
			case 2:
				System.out.println("Mioto apiagiada");
				miMoto.apagar();
				break;
				if(!enMovimiento) {
					
				
			case 3:
				System.out.print("Â¿Cuantos kilometros? ");
				km = Integer.parseInt(sc.next());
//				coche.recorre(km);
				break;
				}
			/*
			 * case 4: coche.quemarRueda(); break; case 5:
			 * System.out.println(bici.getKilometrosRecorridos()); break; case 6:
			 * System.out.println(coche.getKilometrosRecorridos()); break; case 7:
			 * System.out.println(vehiculo.getKilometrosTotales()); break;
			 */
			default:
			}
			System.out.println(miMoto.toString());
